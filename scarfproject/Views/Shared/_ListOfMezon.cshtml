
@model scarfproject.ViewModel.ListOfMezonDetail

<div class="row" style="background-color: #a7a3a3; ">
    @{

        if (Model.data != null)
        {
            foreach (var item in Model.data)
       
        {
            var id = "tailorid" + @item.ID;
            var imageaddress = @item.LogoAddress;
            <div class="col-md-6 electro-left text-center" style="padding: 1%; margin: auto;background-color: #a7a3a3; ">
                <img style="margin:auto" src="~/images/UChart3.jpg" alt="image" class="img-responsive zoom-img">
                <div class="content-grid-effect slow-zoom vertical" style="max-width: 680px; max-height: 400px; margin: auto">
                    <div class="img-box"><img src=@imageaddress alt="image" class="img-responsive zoom-img"></div>
                    <div class="info-box">
                        <div class="info-content electro-text simpleCart_shelfItem">
                            <h4>@item.fullname</h4>
                            <span class="separator"></span>
                            <p><span class="item_price">ارائه دهنده بهترین لباس های مجلسی در شکل امروزی</span></p>
                            <span class="separator"></span>
                            <a id=@id class="item_add hvr-outline-out button2 tailor" href="#">نمایش </a>
                        </div>
                    </div>
                </div>
                <img style="margin:auto" src="~/images/DChart3.jpg" alt="image" class="img-responsive zoom-img">
            </div>


        }
        }
        else
        {
           <script>
               toastr.options = {
                   "debug": false,
                   "positionClass": "toast-top-center",
                   "onclick": null,
                   "fadeIn": 300,
                   "fadeOut": 1000,
                   "timeOut": 5000,
                   "extendedTimeOut": 1000
               }
               toastr.error('موردی وجود ندارد')
           </script>
        }
        
    }

</div>
<script>
    $(".tailor").click(function(){
        var id = this.id;
       
        var url = "/Home/MezonDetail?id=" + id;
        window.location.href = url;
    })
</script>